<Window x:Class="Dialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dialog"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Name="mess_type">тип сообщения</TextBlock>
        <TextBox Name="type"></TextBox>
        <TextBlock Name="play_name">имя игрока</TextBlock>
        <TextBox Name="name"></TextBox>
        <TextBlock Name="red_col">красный цвет</TextBlock>
        <TextBox Name="color1"></TextBox>
        <TextBlock Name="green_col">зелёный цвет</TextBlock>
        <TextBox Name="color2"></TextBox>
        <TextBlock Name="blue_col">синий цвет</TextBlock>
        <TextBox Name="color3"></TextBox>
        <Button Name="button" Click="button_Click">поменять цвет</Button>
    </StackPanel>
</Window>